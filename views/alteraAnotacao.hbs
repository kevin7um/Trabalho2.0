<main>
    <h2>Editar Anotação</h2>
    <form method='POST' action='/anotacao/altera/{{id}}'>
        <div class="row mb-4">
            <div class="col-8">
                <label class="form-label" for="titulo">Título</label>
                <input class="form-control" type='text' name='titulo' value="{{titulo}}" size="60" />
            </div>
            <div class="col-4">
                <label class="form-label" for="tag">Tag</label>
                <select class="form-select" name="tag">
                    <option value="Trabalho" {{#if (confereIgual tagSelecionada "Trabalho")}}selected{{/if}}>Trabalho</option>
                    <option value="Pessoal"{{#if (confereIgual tagSelecionada "Pessoal")}}selected{{/if}}>Pessoal</option>
                    <option value="Curso"{{#if (confereIgual tagSelecionada "Curso")}}selected{{/if}}>Curso</option>
                    <option value="Lazer"{{#if (confereIgual tagSelecionada "Lazer")}}selected{{/if}}>Lazer</option>
                </select>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-12">
                <label class="form-label" for="descricao">Descrição da Anotação</label>
                <textarea class="form-control" rows="5" name='descricao'>{{descricao}}</textarea>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-12">
                {{#if lida}}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="lida" id="lida" checked>
                    <label class="form-check-label align-middle ms-1" for="lida"> Anotação Lida</label>
                </div>
                {{else}}
                    <input class="form-check-input" type="checkbox" name="lida" id="lida">
                    <label class="form-check-label align-middle ms-1" for="lida"> Anotação Lida</label>
                {{/if}}
            </div>
        </div>        

        <a class="btn btn-secondary" role="button" href="/">Cancelar</a>
        <button type="submit" class="btn btn-primary">Alterar</button>
    </form>
</main>  
    