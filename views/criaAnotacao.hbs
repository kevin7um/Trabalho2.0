<main>
    <h2>Criar nova anotação</h2>
    <form method='POST' action='/anotacao/cria'>
        <div class="row">
            <div class="col-12">
                <p><label hidden for="id">Id</label></p>
                <p><input type='' name='id' hidden value={{idInc}} size="30" /></p>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-8">
                <label class="form-label" for="titulo">Título</label>
                <input class="form-control" placeholder="Digite o título da Anotação" type='text' name='titulo' size="60" />
            </div>
            <div class="col-4">
                <label class="form-label" for="tag">Tag</label>
                <select class="form-select" name="tag">
                    <option value="Trabalho" selected>Trabalho</option>
                    <option value="Pessoal" >Pessoal</option>
                    <option value="Curso">Curso</option>
                    <option value="Lazer">Lazer</option>
                </select>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-12">
                <label class="form-label" for="descricao">Descrição da Anotação</label>
                <textarea class="form-control" placeholder="Descreva a Anotação" rows="5" name='descricao'></textarea>
            </div>
        </div>
        
        <a class="btn btn-secondary" role="button" href="/">Cancelar</a>
        <button class="btn btn-primary" type="submit" >Criar</button>
    </form>
</main>